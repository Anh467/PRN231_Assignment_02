@model IEnumerable<Entity.Models.BookAuthor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoyalityPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoyalityPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Notes)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id1="@item.BookId" asp-route-id2="@item.AuthorId">Edit</a> |
                    <a asp-action="Details" asp-route-id1="@item.BookId" asp-route-id2="@item.AuthorId">Details</a> |
                    <a asp-action="Delete" asp-route-id1="@item.BookId" asp-route-id2="@item.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
